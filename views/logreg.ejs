<% layout('./layout/page.ejs') %>

<div class="container">
    <h1>Регистрация и вход</h1>
    <p>Введите имя пользователя и пароль, если такого пользователя нет, то он будет создан.</p>
    <form action="/logreg" method="post">
        <div class="form-group">
            <label for="username">Имя пользователя</label>
            <input type="text" id="username" name="username" placeholder="Введите имя" required>
        </div>
        <div class="form-group">
            <label for="password">Пароль</label>
            <input type="password" id="password" name="password" placeholder="Введите пароль" required>
        </div>
        <button type="submit">Войти</button>
    </form>
</div>

        </div>
        <br/>
        <% if(error) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>  
    </form>
</div>

